{
  "compilerOptions": {
    "target": "ES2019",
    "jsx": "react",
    "module": "commonjs",
    "baseUrl": "./src",
    "outDir": "./dist",
    "allowJs": true,
    "strict": true,
    "lib": ["esnext", "dom"],
    "removeComments": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "./typings.d.ts", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
